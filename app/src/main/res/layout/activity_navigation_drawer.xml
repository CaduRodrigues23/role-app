<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_weight="0.52">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/perfil_image_2" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/downer_scrim_bg"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/user_name"
            android:id="@+id/tv_nome_usuario"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/text_title_size"
            android:textColor="@color/whiteText"
            android:padding="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/my_events"
            android:id="@+id/tv_meus_eventos"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/text_title_size"
            android:layout_alignParentEnd="true"
            android:padding="6dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/configurations"
            android:id="@+id/tv_configuracoes"
            android:textSize="@dimen/text_title_size"
            android:layout_below="@+id/tv_meus_eventos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="6dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/invite_friends"
            android:id="@+id/tv_convidar_amigos"
            android:textSize="@dimen/text_title_size"
            android:layout_below="@+id/tv_configuracoes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="6dp"
            android:layout_marginLeft="20dp" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="fill_parent"
            android:layout_height="@dimen/lines_size"
            android:id="@+id/horizontalLine1"
            android:background="@color/colorDivider"
            android:layout_below="@+id/tv_convidar_amigos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/like"
            android:id="@+id/tv_curtir"
            android:textSize="@dimen/text_title_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/like_description"
            android:id="@+id/tv_curtir_descricao"
            android:layout_below="@+id/tv_curtir"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="6dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_small" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_curtir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/rate"
            android:id="@+id/tv_avaliar"
            android:textSize="@dimen/text_title_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/rate_description"
            android:id="@+id/tv_avaliar_descricao"
            android:layout_below="@+id/tv_avaliar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="6dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="fill_parent"
        android:layout_height="@dimen/lines_size"
        android:id="@+id/horizontalLine2"
        android:background="@color/colorDivider"
        android:layout_below="@+id/tv_avaliar_descricao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout4">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:id="@+id/cb_notificacoes"
            android:checked="false"
            android:padding="6dp"
            android:textSize="@dimen/text_title_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="fill_parent"
            android:layout_height="@dimen/lines_size"
            android:id="@+id/horizontalLine3"
            android:background="@color/colorDivider"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/cb_notificacoes" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/service_terms"
            android:id="@+id/tv_termos_de_servico"
            android:textSize="@dimen/text_title_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="6dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/logout"
            android:id="@+id/tv_deslogar"
            android:textSize="@dimen/text_title_size"
            android:layout_below="@+id/tv_termos_de_servico"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="6dp"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>

</LinearLayout>